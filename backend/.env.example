# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Certificate Settings
CERTIFICATE_SIGNATURE=Ritika Tech Hub
CERTIFICATE_ISSUER=Ritika Saini